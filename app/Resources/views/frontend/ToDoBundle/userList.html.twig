{% extends '::frontend/frontend.html.twig' %}
{% from '::frontend/Macros/actions.html.twig' import userlist %}
{% import '::frontend/Macros/alerts.html.twig' as alerts %}

{% block body_inner %}

	<div class="page-header">
		<h1>Users list</h1>
	</div>
                
                {% include '::frontend/Helpers/messages.html.twig' %}

	<table class="table table-hover">
		<thead>
			<tr>
				<th>Name</th>
				<th>Surname</th>
				<th>Birthday</th>
				<th>Company</th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			{% for entity in entities %}
			<tr>
                                                                <td>{{ entity.firstName }}</td>
				<td>{{ entity.lastName }}</td>
				<td>{{ entity.dateOfBirth|date('d.m.Y.') }}</td>
				<td>{{ entity.company }}</td>
				<td class="align-right">
                                                                    <a href="{{ path('user_edit', {'id':entity.id}) }}" class="btn btn-xs btn-primary"><i class="glyphicon glyphicon-edit"></i></a>
                                                                    <a href="{{ path('user_delete', {'id':entity.id}) }}" class="btn btn-xs btn-danger"><i class="glyphicon glyphicon-remove"></i></a>
				</td>
			</tr>
			{% endfor %}
		</tbody>
	</table>
	
{% endblock %}